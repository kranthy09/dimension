# ── Dimension Project — Production Environment Variables ──
# Copy to .env on VPS and fill in values before deploying
# cp .env.production.example .env

# ── Domain ──
DOMAIN=evolune.dev

# ── Environment ──
FASTAPI_CONFIG=production

# ── Database ──
POSTGRES_DB=portfolio_prod
POSTGRES_USER=frontuser
POSTGRES_PASSWORD=Frontuser123
DATABASE_URL=postgresql://frontuser:Frontuser123@db:5432/portfolio_prod

# ── Backend Security ──
SECRET_KEY=                         # python3 -c "import secrets; print(secrets.token_hex(32))"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ── Backend Services ──
MEDIA_ROOT=/app/media
MARKDOWN_DIR=markdown
MAX_UPLOAD_SIZE=10485760
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["https://evolune.dev","https://www.evolune.dev"]

# ── GitHub Integration (DSA Dashboard) ──
# Fine-grained token: https://github.com/settings/tokens?type=beta
# Permission: Contents (read-only) on your DSA repo
GITHUB_TOKEN=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=

# ── Frontend ──
NEXT_PUBLIC_API_URL=https://evolune.dev/api/v1